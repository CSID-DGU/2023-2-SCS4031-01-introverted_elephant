<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old_man.OldMainActivity">

    <Button
        android:id="@+id/oldSettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/backgroundTextView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_custom_button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/contentTextView1"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView1"
        app:layout_constraintStart_toStartOf="@+id/contentTextView1"
        app:layout_constraintTop_toTopOf="@+id/contentTextView1" />

    <TextView
        android:id="@+id/titleTextView1"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/contentTextView1"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView1" />

    <TextView
        android:id="@+id/contentTextView1"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_height="100dp"
        android:text=""
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView1" />

    <TextView
        android:id="@+id/timeTextView1"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text=""
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView1"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/oldSettingButton" />

    <Button
        android:id="@+id/yesButton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:visibility="invisible"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView1"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView1" />

    <Button
        android:id="@+id/noButton1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="거절"
        android:visibility="invisible"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView1"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView1" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/backgroundTextView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6AEFD635"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/yesButton2"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView2"
        app:layout_constraintStart_toStartOf="@+id/contentTextView2"
        app:layout_constraintTop_toTopOf="@+id/timeTextView2" />

    <TextView
        android:id="@+id/titleTextView2"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/contentTextView2"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView2" />

    <TextView
        android:id="@+id/contentTextView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text=""
        android:textSize="30sp"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView2" />

    <TextView
        android:id="@+id/timeTextView2"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text=""

        android:textSize="30sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView2"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/yesButton1" />

    <Button
        android:id="@+id/yesButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:visibility="invisible"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView2"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView2" />

    <Button
        android:id="@+id/noButton2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="거절"
        android:visibility="invisible"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView2"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView2" />

    <TextView
        android:id="@+id/backgroundTextView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6A35EFB4"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/yesButton3"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView3"
        app:layout_constraintStart_toStartOf="@+id/contentTextView3"
        app:layout_constraintTop_toTopOf="@+id/timeTextView3" />

    <TextView
        android:id="@+id/titleTextView3"
        android:layout_width="124dp"
        android:layout_height="47dp"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/contentTextView3"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView3" />

    <TextView
        android:id="@+id/contentTextView3"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text=""
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeTextView3" />

    <TextView
        android:id="@+id/timeTextView3"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:text=""
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView3"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/yesButton2" />

    <Button
        android:id="@+id/yesButton3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/contentTextView3"
        app:layout_constraintStart_toStartOf="@+id/verticalGuideline"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView3" />

    <Button
        android:id="@+id/noButton3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="거절"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/verticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/contentTextView3"
        app:layout_constraintTop_toBottomOf="@+id/contentTextView3" />

    <Button
        android:id="@+id/workButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만보기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oldMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지도 기능"
        app:layout_constraintEnd_toStartOf="@+id/workButton"
        app:layout_constraintHorizontal_bias="0.647"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>