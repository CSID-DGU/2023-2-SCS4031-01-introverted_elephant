<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".old_man.OldSettingActivity">

    <com.google.android.material.chip.Chip
        android:id="@+id/oldSignOutChip"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="로그 아웃"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/oldDeleteIDChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/oldDeleteIDChip"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="회원 탈퇴"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/finishChip"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="백그라운드 설정"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/oldSignOutChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/masterChip"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="이용 약관"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toTopOf="@+id/finishChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/TextView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주요 정보"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/informationTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/informationTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="주요 정보를 입력해주세요.\n\nex) 노약자 혈액형 : AB\n"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/masterChip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어르신 전화번호"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/oldNumberTextView"
        app:layout_constraintEnd_toEndOf="@+id/informationTextView"
        app:layout_constraintStart_toStartOf="@+id/informationTextView" />

    <TextView
        android:id="@+id/oldNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01012345678"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="@+id/informationTextView"
        app:layout_constraintStart_toStartOf="@+id/informationTextView" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자 전화번호"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/masterNumberTextView"
        app:layout_constraintEnd_toEndOf="@+id/informationTextView"
        app:layout_constraintStart_toStartOf="@+id/informationTextView" />

    <TextView
        android:id="@+id/masterNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01012345678"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/TextView14"
        app:layout_constraintEnd_toEndOf="@+id/informationTextView"
        app:layout_constraintStart_toStartOf="@+id/informationTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>